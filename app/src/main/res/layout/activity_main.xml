<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- FLAG_ONE_SHOT 发送 -->
    <Button
        android:id="@+id/btn_one_shot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send PendingIntent (FLAG_ONE_SHOT)"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"/>

    <!-- 先取消，后发送 -->
    <Button
        android:id="@+id/btn_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel&amp;Send PendingIntent"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"/>

    <!-- 发送按钮 -->
    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send PendingIntent"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"/>

    <!-- 取消按钮 -->
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel PendingIntent"
        android:textAllCaps="false"/>

</LinearLayout>